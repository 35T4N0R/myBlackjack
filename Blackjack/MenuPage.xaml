<Page x:Class="Blackjack.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Blackjack"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="./images/background.jpg" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Graj" Name="playButton" Width="100" Height="30" FontSize="18" Margin="0 100 0 0" Click="playButton_Click"></Button>
        <Button Content="Wyjście" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" FontSize="18" Margin="0 170 0 0" Click="Button_Click"></Button>
        <Image Source="./images/logo4.png" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="200" Margin="0 0 0 245"/>
    </Grid>
</Page>
