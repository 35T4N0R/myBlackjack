<Page x:Class="Blackjack.AuthorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Blackjack"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="./images/gamebackground.png" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <Label Content="Aplikacja w pełni stworzona przez : " VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="30" Margin="0 0 0 300"/>
        <Label Name="authorLabel" Content="MICHAŁ ZAORSKI" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="75"/>
        <Image Cursor="Hand" Source="back.png" Height="35" x:Name="backButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 20" MouseDown="backButton_MouseDown"/>

    </Grid>
</Page>
